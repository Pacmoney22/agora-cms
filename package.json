{
  "name": "nextgen-cms",
  "version": "1.0.0",
  "private": true,
  "description": "NextGen CMS - Drag-and-Drop Commerce & Content Platform",
  "scripts": {
    "dev": "turbo dev",
    "build": "turbo build",
    "lint": "turbo lint",
    "test": "turbo test",
    "test:cov": "turbo test:cov",
    "test:integration": "turbo test:integration",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:debug": "playwright test --debug",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "format:check": "prettier --check \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "db:migrate": "pnpm --filter @nextgen-cms/database db:migrate",
    "db:seed": "pnpm --filter @nextgen-cms/database db:seed",
    "db:studio": "pnpm --filter @nextgen-cms/database db:studio",
    "clean": "turbo clean && rm -rf node_modules"
  },
  "devDependencies": {
    "turbo": "^2.4.0",
    "prettier": "^3.5.0",
    "typescript": "^5.7.0"
  },
  "pnpm": {
    "overrides": {
      "qs": ">=6.14.2",
      "js-yaml": ">=4.1.1",
      "lodash": ">=4.17.23"
    }
  },
  "packageManager": "pnpm@10.29.2",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  }
}
