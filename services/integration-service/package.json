{
  "name": "@agora-cms/integration-service",
  "version": "0.0.0",
  "private": true,
  "description": "Agora CMS Integration Service - Payment, Analytics & CRM integrations",
  "scripts": {
    "dev": "nest start --watch --port 3003",
    "build": "nest build",
    "start": "node dist/main",
    "start:prod": "node dist/main",
    "test": "jest --passWithNoTests --forceExit",
    "test:watch": "jest --watch",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "lint": "eslint src/",
    "clean": "rm -rf dist"
  },
  "dependencies": {
    "@google-analytics/data": "^4.8.0",
    "@nestjs/common": "^10.4.0",
    "@nestjs/config": "^3.3.0",
    "@nestjs/core": "^10.4.0",
    "@nestjs/platform-express": "^10.4.0",
    "@nestjs/swagger": "^7.4.0",
    "@agora-cms/database": "workspace:*",
    "@agora-cms/shared": "workspace:*",
    "axios": "^1.7.0",
    "ioredis": "^5.4.0",
    "jsforce": "^3.10.14",
    "kafkajs": "^2.2.0",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.0",
    "stripe": "^17.6.0",
    "uuid": "^11.0.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.0",
    "@nestjs/testing": "^10.4.0",
    "@agora-cms/eslint-config": "workspace:*",
    "@agora-cms/tsconfig": "workspace:*",
    "@types/express": "^5.0.6",
    "@types/jest": "^29.5.0",
    "@types/supertest": "^6.0.0",
    "@types/uuid": "^10.0.0",
    "eslint": "^9.0.0",
    "jest": "^29.7.0",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.0",
    "typescript": "^5.7.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  }
}
