# ============================================================
# Agora CMS - Environment Configuration
# Copy this file to .env and fill in the values
# ============================================================

# Database
DATABASE_URL=postgresql://agora:agora_dev@localhost:5432/agora_cms

# Redis
REDIS_URL=redis://localhost:6379

# Elasticsearch
ELASTICSEARCH_URL=http://localhost:9200

# Kafka
KAFKA_BROKERS=localhost:9092

# MinIO / S3
S3_ENDPOINT=http://localhost:9000
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin
S3_BUCKET_MEDIA=agora-media
S3_BUCKET_LABELS=agora-labels
S3_REGION=us-east-1

# Kong API Gateway
API_GATEWAY_URL=http://localhost:8000

# JWT Auth
JWT_SECRET=your-jwt-secret-change-in-production
JWT_EXPIRATION=15m
JWT_REFRESH_EXPIRATION=7d

# Service Ports
CONTENT_SERVICE_PORT=3001
COMMERCE_SERVICE_PORT=3002
INTEGRATION_SERVICE_PORT=3003
SHIPPING_GATEWAY_PORT=3004
COURSE_SERVICE_PORT=3005
PAGE_BUILDER_PORT=3100
STOREFRONT_PORT=3200
ADMIN_DASHBOARD_PORT=3300

# Frontend → Service URLs (used when Kong gateway is not running)
NEXT_PUBLIC_CONTENT_API_URL=http://localhost:3001
NEXT_PUBLIC_COMMERCE_API_URL=http://localhost:3002
NEXT_PUBLIC_COURSE_API_URL=http://localhost:3005

# Page Builder Dev Auth (local dev only — set via env, not in source code)
NEXT_PUBLIC_PB_DEV_PASSWORD="PB_Dev#2026!secure"
# Seed script demo password (local dev only)
SEED_DEMO_PASSWORD="Password123!"

# CORS (comma-separated origins allowed by backend services)
CORS_ORIGINS=http://localhost:3100,http://localhost:3200,http://localhost:3300

# ============================================================
# Integration Credentials (Phase 2-3)
# Leave empty to use stub implementations
# ============================================================

# Stripe (Payments + Tax)
# Stripe Tax uses the same secret key — enable Tax in your Stripe Dashboard
STRIPE_ENABLED=false
STRIPE_SECRET_KEY=
STRIPE_PUBLISHABLE_KEY=
STRIPE_WEBHOOK_SECRET=

# Inter-service communication (commerce-service → content-service for settings)
CONTENT_API_URL=http://localhost:3001

# Google Analytics
GA4_ENABLED=false
GA4_MEASUREMENT_ID=
GA4_API_SECRET=

# Salesforce
SALESFORCE_ENABLED=false
SALESFORCE_CLIENT_ID=
SALESFORCE_PRIVATE_KEY=
SALESFORCE_USERNAME=
SALESFORCE_LOGIN_URL=https://login.salesforce.com

# Shipping Carriers
UPS_ENABLED=false
UPS_CLIENT_ID=
UPS_CLIENT_SECRET=
UPS_ACCOUNT_NUMBER=

USPS_ENABLED=false
USPS_USER_ID=

FEDEX_ENABLED=false
FEDEX_CLIENT_ID=
FEDEX_CLIENT_SECRET=
FEDEX_ACCOUNT_NUMBER=

DHL_ENABLED=false
DHL_API_KEY=
DHL_API_SECRET=
