{
  "id": "data-table",
  "name": "Data Table",
  "category": "Data Display",
  "icon": "table",
  "acceptsChildren": false,
  "properties": {
    "columns": {
      "type": "array",
      "label": "Columns",
      "items": {
        "type": "object",
        "properties": {
          "header": {
            "type": "string",
            "label": "Header",
            "default": "Column"
          },
          "key": {
            "type": "string",
            "label": "Key",
            "default": "column"
          },
          "width": {
            "type": "string",
            "label": "Width",
            "default": null
          },
          "alignment": {
            "type": "enum",
            "values": ["left", "center", "right"],
            "default": "left",
            "label": "Alignment"
          },
          "sortable": {
            "type": "boolean",
            "default": true,
            "label": "Sortable"
          }
        }
      },
      "default": []
    },
    "rows": {
      "type": "array",
      "label": "Rows",
      "items": {
        "type": "object",
        "properties": {}
      },
      "default": []
    },
    "dataSource": {
      "type": "enum",
      "values": ["manual", "csv", "api"],
      "default": "manual",
      "label": "Data Source"
    },
    "striped": {
      "type": "boolean",
      "default": false,
      "label": "Striped Rows"
    },
    "bordered": {
      "type": "boolean",
      "default": false,
      "label": "Bordered"
    },
    "hoverable": {
      "type": "boolean",
      "default": true,
      "label": "Hoverable Rows"
    },
    "sortable": {
      "type": "boolean",
      "default": false,
      "label": "Enable Sorting"
    },
    "searchable": {
      "type": "boolean",
      "default": false,
      "label": "Enable Search"
    },
    "paginated": {
      "type": "boolean",
      "default": false,
      "label": "Enable Pagination"
    },
    "rowsPerPage": {
      "type": "number",
      "default": 10,
      "min": 1,
      "max": 100,
      "label": "Rows Per Page"
    },
    "caption": {
      "type": "string",
      "default": null,
      "label": "Table Caption"
    },
    "responsive": {
      "type": "enum",
      "values": ["scroll", "stack", "collapse"],
      "default": "scroll",
      "label": "Responsive Mode"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "scroll-on-mobile"
  }
}
