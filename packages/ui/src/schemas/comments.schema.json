{
  "id": "comments",
  "name": "Comments",
  "category": "Blog",
  "icon": "message-circle",
  "acceptsChildren": false,
  "properties": {
    "source": {
      "type": "enum",
      "values": ["settings", "manual"],
      "default": "settings",
      "label": "Configuration Source",
      "description": "Use 'settings' to inherit from Blog Settings in Admin Dashboard, or 'manual' to configure here"
    },
    "comments": {
      "type": "array",
      "label": "Comments (Preview)",
      "visibleWhen": { "source": "manual" },
      "items": {
        "type": "object",
        "properties": {
          "id": { "type": "string", "default": "", "label": "ID", "required": true },
          "author": { "type": "string", "default": "", "label": "Author", "required": true },
          "avatar": { "type": "image", "default": null, "label": "Avatar" },
          "content": { "type": "string", "default": "", "label": "Content", "required": true },
          "date": { "type": "string", "default": "", "label": "Date" },
          "likes": { "type": "number", "default": 0, "label": "Likes" },
          "replies": {
            "type": "array",
            "label": "Replies",
            "items": {
              "type": "object",
              "properties": {
                "id": { "type": "string", "default": "", "label": "ID" },
                "author": { "type": "string", "default": "", "label": "Author" },
                "avatar": { "type": "image", "default": null, "label": "Avatar" },
                "content": { "type": "string", "default": "", "label": "Content" },
                "date": { "type": "string", "default": "", "label": "Date" },
                "likes": { "type": "number", "default": 0, "label": "Likes" }
              }
            },
            "default": []
          }
        }
      },
      "default": []
    },
    "provider": {
      "type": "enum",
      "values": ["native", "disqus"],
      "default": "native",
      "label": "Comment Provider",
      "visibleWhen": { "source": "manual" }
    },
    "allowNested": {
      "type": "boolean",
      "default": true,
      "label": "Allow Nested Replies",
      "visibleWhen": { "source": "manual" }
    },
    "maxDepth": {
      "type": "number",
      "default": 3,
      "label": "Max Reply Depth",
      "min": 1,
      "max": 5,
      "visibleWhen": { "source": "manual" }
    },
    "sortDefault": {
      "type": "enum",
      "values": ["newest", "oldest", "most-liked"],
      "default": "newest",
      "label": "Default Sort",
      "visibleWhen": { "source": "manual" }
    },
    "requireAuth": {
      "type": "boolean",
      "default": false,
      "label": "Require Authentication",
      "visibleWhen": { "source": "manual" }
    },
    "moderation": {
      "type": "enum",
      "values": ["none", "pre-moderation", "post-moderation"],
      "default": "none",
      "label": "Moderation",
      "visibleWhen": { "source": "manual" }
    },
    "showAvatars": {
      "type": "boolean",
      "default": true,
      "label": "Show Avatars",
      "visibleWhen": { "source": "manual" }
    },
    "perPage": {
      "type": "number",
      "default": 10,
      "label": "Comments Per Page",
      "min": 5,
      "max": 50,
      "visibleWhen": { "source": "manual" }
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"]
  }
}
