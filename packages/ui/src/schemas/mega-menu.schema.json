{
  "id": "mega-menu",
  "name": "Mega Menu",
  "category": "Navigation",
  "icon": "mega-menu",
  "acceptsChildren": false,
  "properties": {
    "navigationMenu": {
      "type": "enum",
      "values": ["none", "header", "footer", "sidebar", "mobile"],
      "default": "header",
      "label": "Navigation Menu"
    },
    "columns": {
      "type": "navitems",
      "label": "Menu Items",
      "default": []
    },
    "featuredContent": {
      "type": "object",
      "default": null,
      "label": "Featured Content",
      "properties": {
        "image": {
          "type": "image",
          "label": "Featured Image",
          "constraints": { "formats": ["jpg", "png", "webp"] }
        },
        "heading": { "type": "string", "label": "Heading" },
        "description": { "type": "string", "default": null, "label": "Description" },
        "ctaLabel": { "type": "string", "default": "Learn More", "label": "CTA Label" },
        "ctaUrl": { "type": "pagelink", "default": "#", "label": "CTA URL" }
      }
    },
    "showFeatured": {
      "type": "boolean",
      "default": true,
      "label": "Show Featured Panel"
    },
    "maxWidth": {
      "type": "enum",
      "values": ["container", "full"],
      "default": "container",
      "label": "Max Width"
    },
    "animation": {
      "type": "enum",
      "values": ["fade", "slide-down", "none"],
      "default": "fade",
      "label": "Animation Style"
    },
    "triggerLabel": {
      "type": "string",
      "default": "Menu",
      "label": "Trigger Button Label"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "accordion-on-mobile"
  }
}
