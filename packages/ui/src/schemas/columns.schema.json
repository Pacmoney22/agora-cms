{
  "id": "columns",
  "name": "Columns",
  "category": "Layout",
  "icon": "columns",
  "acceptsChildren": true,
  "properties": {
    "ratio": {
      "type": "enum",
      "values": ["50-50", "33-67", "67-33", "25-75", "75-25", "40-60", "60-40"],
      "default": "50-50",
      "label": "Column Ratio"
    },
    "gap": {
      "type": "enum",
      "values": ["none", "small", "medium", "large"],
      "default": "medium",
      "label": "Gap"
    },
    "verticalAlignment": {
      "type": "enum",
      "values": ["top", "center", "bottom"],
      "default": "top",
      "label": "Vertical Alignment"
    },
    "reverseOnMobile": {
      "type": "boolean",
      "default": false,
      "label": "Reverse on Mobile"
    },
    "stackBreakpoint": {
      "type": "enum",
      "values": ["tablet", "mobile", "never"],
      "default": "tablet",
      "label": "Stack Breakpoint"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "vertical-on-mobile"
  }
}
