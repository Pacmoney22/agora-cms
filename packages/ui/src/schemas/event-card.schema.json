{
  "id": "event-card",
  "name": "Event Card",
  "category": "Events",
  "icon": "calendar",
  "acceptsChildren": false,
  "properties": {
    "mode": {
      "type": "enum",
      "values": ["card", "detail"],
      "default": "card",
      "label": "Display Mode"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["standard", "compact", "featured"],
      "default": "standard",
      "label": "Card Style"
    },
    "showDate": {
      "type": "boolean",
      "default": true,
      "label": "Show Date"
    },
    "showVenue": {
      "type": "boolean",
      "default": true,
      "label": "Show Venue"
    },
    "showTicketPrice": {
      "type": "boolean",
      "default": true,
      "label": "Show Ticket Price"
    },
    "showStatus": {
      "type": "boolean",
      "default": true,
      "label": "Show Status Badge"
    },
    "showImage": {
      "type": "boolean",
      "default": true,
      "label": "Show Image"
    },
    "showFullDescription": {
      "type": "boolean",
      "default": true,
      "label": "Show Full Description",
      "visibleWhen": { "mode": "detail" }
    },
    "showTickets": {
      "type": "boolean",
      "default": true,
      "label": "Show Ticket Tiers",
      "visibleWhen": { "mode": "detail" }
    },
    "showSchedule": {
      "type": "boolean",
      "default": true,
      "label": "Show Schedule / Agenda",
      "visibleWhen": { "mode": "detail" }
    },
    "showSpeakers": {
      "type": "boolean",
      "default": true,
      "label": "Show Speakers",
      "visibleWhen": { "mode": "detail" }
    },
    "showRegistrationForm": {
      "type": "boolean",
      "default": true,
      "label": "Show Registration Form",
      "visibleWhen": { "mode": "detail" }
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"]
  }
}
