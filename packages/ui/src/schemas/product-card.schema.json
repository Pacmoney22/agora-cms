{
  "id": "product-card",
  "name": "Product Card",
  "category": "Commerce",
  "icon": "shopping-bag",
  "acceptsChildren": false,
  "properties": {
    "showImage": {
      "type": "boolean",
      "default": true,
      "label": "Show Image"
    },
    "imageAspectRatio": {
      "type": "enum",
      "values": ["1:1", "4:3", "3:4", "16:9"],
      "default": "1:1",
      "label": "Image Aspect Ratio"
    },
    "showPrice": {
      "type": "boolean",
      "default": true,
      "label": "Show Price"
    },
    "showRating": {
      "type": "boolean",
      "default": true,
      "label": "Show Rating"
    },
    "showBadge": {
      "type": "boolean",
      "default": true,
      "label": "Show Badge"
    },
    "showQuickAdd": {
      "type": "boolean",
      "default": true,
      "label": "Show Quick Add"
    },
    "showVariantSelector": {
      "type": "boolean",
      "default": false,
      "label": "Show Variant Selector"
    },
    "showProductType": {
      "type": "boolean",
      "default": false,
      "label": "Show Product Type"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["standard", "minimal", "overlay", "horizontal"],
      "default": "standard",
      "label": "Card Style"
    },
    "hoverEffect": {
      "type": "enum",
      "values": ["none", "zoom", "swap-image", "shadow"],
      "default": "zoom",
      "label": "Hover Effect"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "full-width-on-mobile"
  }
}
