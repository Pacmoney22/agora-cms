{
  "id": "product-card",
  "name": "Product Card",
  "category": "Commerce",
  "icon": "shopping-bag",
  "acceptsChildren": false,
  "properties": {
    "mode": {
      "type": "enum",
      "values": ["card", "detail"],
      "default": "card",
      "label": "Display Mode"
    },
    "showImage": {
      "type": "boolean",
      "default": true,
      "label": "Show Image"
    },
    "imageAspectRatio": {
      "type": "enum",
      "values": ["1:1", "4:3", "3:4", "16:9"],
      "default": "1:1",
      "label": "Image Aspect Ratio"
    },
    "showPrice": {
      "type": "boolean",
      "default": true,
      "label": "Show Price"
    },
    "showRating": {
      "type": "boolean",
      "default": true,
      "label": "Show Rating"
    },
    "showBadge": {
      "type": "boolean",
      "default": true,
      "label": "Show Badge"
    },
    "showQuickAdd": {
      "type": "boolean",
      "default": true,
      "label": "Show Quick Add"
    },
    "showVariantSelector": {
      "type": "boolean",
      "default": false,
      "label": "Show Variant Selector"
    },
    "showProductType": {
      "type": "boolean",
      "default": false,
      "label": "Show Product Type"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["standard", "minimal", "overlay", "horizontal"],
      "default": "standard",
      "label": "Card Style"
    },
    "hoverEffect": {
      "type": "enum",
      "values": ["none", "zoom", "swap-image", "shadow"],
      "default": "zoom",
      "label": "Hover Effect"
    },
    "showDescription": {
      "type": "boolean",
      "default": true,
      "label": "Show Description",
      "visibleWhen": { "mode": "detail" }
    },
    "showShippingDetails": {
      "type": "boolean",
      "default": true,
      "label": "Show Shipping / Delivery Details",
      "visibleWhen": { "mode": "detail" }
    },
    "showConfiguration": {
      "type": "boolean",
      "default": true,
      "label": "Show Configuration Options",
      "visibleWhen": { "mode": "detail" }
    },
    "showVariants": {
      "type": "boolean",
      "default": true,
      "label": "Show Variant Selector (Detail)",
      "visibleWhen": { "mode": "detail" }
    },
    "showTags": {
      "type": "boolean",
      "default": true,
      "label": "Show Tags",
      "visibleWhen": { "mode": "detail" }
    },
    "showRelatedProducts": {
      "type": "boolean",
      "default": true,
      "label": "Show Related Products",
      "visibleWhen": { "mode": "detail" }
    },
    "showQuantitySelector": {
      "type": "boolean",
      "default": true,
      "label": "Show Quantity Selector",
      "visibleWhen": { "mode": "detail" }
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "full-width-on-mobile"
  }
}
