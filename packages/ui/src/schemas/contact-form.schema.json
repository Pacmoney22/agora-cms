{
  "id": "contact-form",
  "name": "Form",
  "category": "Forms",
  "icon": "contact-form",
  "acceptsChildren": false,
  "properties": {
    "formId": {
      "type": "formSelector",
      "default": "",
      "label": "Form",
      "description": "Select a form built in the Admin Dashboard (Forms section)"
    },
    "submitLabel": {
      "type": "string",
      "default": "Submit",
      "label": "Submit Button Label"
    },
    "successMessage": {
      "type": "string",
      "default": "Thank you! Your submission has been received.",
      "label": "Success Message"
    },
    "successAction": {
      "type": "enum",
      "values": ["show-message", "redirect"],
      "default": "show-message",
      "label": "Success Action"
    },
    "redirectUrl": {
      "type": "url",
      "default": null,
      "label": "Redirect URL (if redirect action)"
    },
    "submitEndpoint": {
      "type": "url",
      "default": null,
      "label": "Submission Endpoint URL"
    },
    "honeypot": {
      "type": "boolean",
      "default": true,
      "label": "Enable Honeypot Spam Protection"
    },
    "buttonStyle": {
      "type": "enum",
      "values": ["primary", "secondary", "outline"],
      "default": "primary",
      "label": "Button Style"
    },
    "inputSize": {
      "type": "enum",
      "values": ["sm", "md", "lg"],
      "default": "md",
      "label": "Input Size"
    },
    "labelPosition": {
      "type": "enum",
      "values": ["above", "inline", "hidden"],
      "default": "above",
      "label": "Label Position"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"]
  }
}
