{
  "id": "featured-products",
  "name": "Featured Products",
  "category": "Commerce",
  "icon": "star",
  "acceptsChildren": false,
  "properties": {
    "heading": {
      "type": "string",
      "default": "Featured Products",
      "label": "Heading",
      "maxLength": 80,
      "seo": { "tag": "h2" }
    },
    "source": {
      "type": "enum",
      "values": ["best-sellers", "new-arrivals", "on-sale", "recently-viewed", "recommended"],
      "default": "best-sellers",
      "label": "Product Source"
    },
    "maxProducts": {
      "type": "number",
      "default": 4,
      "min": 2,
      "max": 8,
      "label": "Max Products"
    },
    "layout": {
      "type": "enum",
      "values": ["row", "carousel"],
      "default": "row",
      "label": "Layout"
    },
    "viewAllLink": {
      "type": "url",
      "default": null,
      "label": "View All Link"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "reduce-columns-on-mobile"
  }
}
