{
  "id": "newsletter-signup",
  "name": "Newsletter Signup",
  "category": "Forms",
  "icon": "newsletter-signup",
  "acceptsChildren": false,
  "properties": {
    "heading": {
      "type": "string",
      "default": "Stay up to date",
      "label": "Heading"
    },
    "description": {
      "type": "string",
      "default": "Get the latest news and updates delivered to your inbox.",
      "label": "Description"
    },
    "placeholder": {
      "type": "string",
      "default": "Enter your email",
      "label": "Email Placeholder"
    },
    "submitLabel": {
      "type": "string",
      "default": "Subscribe",
      "label": "Submit Button Label"
    },
    "layout": {
      "type": "enum",
      "values": ["inline", "stacked", "card"],
      "default": "inline",
      "label": "Layout"
    },
    "showNameField": {
      "type": "boolean",
      "default": false,
      "label": "Show Name Field"
    },
    "doubleOptIn": {
      "type": "boolean",
      "default": false,
      "label": "Double Opt-In"
    },
    "submitEndpoint": {
      "type": "url",
      "default": null,
      "label": "Submission Endpoint URL"
    },
    "salesforceEnabled": {
      "type": "boolean",
      "default": false,
      "label": "Enable Salesforce Integration"
    },
    "salesforceObjectType": {
      "type": "enum",
      "values": ["Lead", "Contact"],
      "default": "Lead",
      "label": "Salesforce Object Type",
      "visibleWhen": { "salesforceEnabled": true }
    },
    "salesforceFieldMapping": {
      "type": "array",
      "label": "Salesforce Field Mapping",
      "visibleWhen": { "salesforceEnabled": true },
      "items": {
        "type": "object",
        "properties": {
          "formField": { "type": "string", "default": "", "label": "Form Field" },
          "sfField": { "type": "string", "default": "", "label": "Salesforce Field API Name" }
        }
      },
      "default": []
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"]
  }
}
