{
  "id": "product-grid",
  "name": "Product Grid",
  "category": "Commerce",
  "icon": "grid",
  "acceptsChildren": false,
  "properties": {
    "source": {
      "type": "enum",
      "values": ["category", "tag", "best-sellers", "new-arrivals", "on-sale", "related"],
      "default": "new-arrivals",
      "label": "Product Source"
    },
    "categoryId": {
      "type": "category",
      "default": null,
      "label": "Select Category",
      "visibleWhen": { "source": "category" }
    },
    "productTypes": {
      "type": "array",
      "items": { "type": "string" },
      "default": [],
      "label": "Product Types"
    },
    "productTag": {
      "type": "string",
      "default": "",
      "label": "Product Tag",
      "visibleWhen": { "source": "tag" }
    },
    "maxProducts": {
      "type": "number",
      "default": 24,
      "min": 1,
      "max": 100,
      "label": "Max Products"
    },
    "columns": {
      "type": "enum",
      "values": [2, 3, 4, 5],
      "default": 4,
      "label": "Columns"
    },
    "showFilters": {
      "type": "boolean",
      "default": true,
      "label": "Show Filters"
    },
    "showSort": {
      "type": "boolean",
      "default": true,
      "label": "Show Sort"
    },
    "paginationStyle": {
      "type": "enum",
      "values": ["load-more", "numbered", "infinite-scroll"],
      "default": "load-more",
      "label": "Pagination Style"
    },
    "emptyStateMessage": {
      "type": "string",
      "default": "No products found matching your criteria.",
      "label": "Empty State Message"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "reduce-columns-on-mobile"
  }
}
