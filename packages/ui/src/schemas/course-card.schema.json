{
  "id": "course-card",
  "name": "Course Card",
  "category": "Courses",
  "icon": "book-open",
  "acceptsChildren": false,
  "properties": {
    "mode": {
      "type": "enum",
      "values": ["card", "detail"],
      "default": "card",
      "label": "Display Mode"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["standard", "compact", "featured"],
      "default": "standard",
      "label": "Card Style"
    },
    "showThumbnail": {
      "type": "boolean",
      "default": true,
      "label": "Show Thumbnail"
    },
    "showInstructor": {
      "type": "boolean",
      "default": true,
      "label": "Show Instructor"
    },
    "showDuration": {
      "type": "boolean",
      "default": true,
      "label": "Show Duration"
    },
    "showPrice": {
      "type": "boolean",
      "default": true,
      "label": "Show Price"
    },
    "showLevel": {
      "type": "boolean",
      "default": true,
      "label": "Show Level Badge"
    },
    "showRating": {
      "type": "boolean",
      "default": true,
      "label": "Show Rating"
    },
    "showCurriculum": {
      "type": "boolean",
      "default": true,
      "label": "Show Curriculum",
      "visibleWhen": { "mode": "detail" }
    },
    "showReviews": {
      "type": "boolean",
      "default": true,
      "label": "Show Reviews",
      "visibleWhen": { "mode": "detail" }
    },
    "showObjectives": {
      "type": "boolean",
      "default": true,
      "label": "Show Learning Objectives",
      "visibleWhen": { "mode": "detail" }
    },
    "showPrerequisites": {
      "type": "boolean",
      "default": true,
      "label": "Show Prerequisites",
      "visibleWhen": { "mode": "detail" }
    },
    "showInstructorBio": {
      "type": "boolean",
      "default": true,
      "label": "Show Instructor Bio",
      "visibleWhen": { "mode": "detail" }
    },
    "showEnrollmentCard": {
      "type": "boolean",
      "default": true,
      "label": "Show Enrollment Sidebar",
      "visibleWhen": { "mode": "detail" }
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"]
  }
}
