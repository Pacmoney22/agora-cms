{
  "id": "blog-post-card",
  "name": "Blog Post Card",
  "category": "Blog",
  "icon": "file-text",
  "acceptsChildren": false,
  "properties": {
    "mode": {
      "type": "enum",
      "values": ["card", "detail"],
      "default": "card",
      "label": "Display Mode"
    },
    "showImage": {
      "type": "boolean",
      "default": true,
      "label": "Show Image"
    },
    "imageAspectRatio": {
      "type": "enum",
      "values": ["16:9", "4:3", "1:1"],
      "default": "16:9",
      "label": "Image Aspect Ratio"
    },
    "showExcerpt": {
      "type": "boolean",
      "default": true,
      "label": "Show Excerpt"
    },
    "excerptLength": {
      "type": "number",
      "default": 150,
      "label": "Excerpt Length",
      "min": 50,
      "max": 500
    },
    "showAuthor": {
      "type": "boolean",
      "default": true,
      "label": "Show Author"
    },
    "showDate": {
      "type": "boolean",
      "default": true,
      "label": "Show Date"
    },
    "showCategory": {
      "type": "boolean",
      "default": true,
      "label": "Show Category"
    },
    "showReadTime": {
      "type": "boolean",
      "default": true,
      "label": "Show Read Time"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["standard", "overlay", "horizontal", "minimal"],
      "default": "standard",
      "label": "Card Style"
    },
    "showContent": {
      "type": "boolean",
      "default": true,
      "label": "Show Full Content",
      "visibleWhen": { "mode": "detail" }
    },
    "showShareButtons": {
      "type": "boolean",
      "default": true,
      "label": "Show Share Buttons",
      "visibleWhen": { "mode": "detail" }
    },
    "showAuthorBio": {
      "type": "boolean",
      "default": true,
      "label": "Show Author Bio",
      "visibleWhen": { "mode": "detail" }
    },
    "showRelatedPosts": {
      "type": "boolean",
      "default": true,
      "label": "Show Related Posts",
      "visibleWhen": { "mode": "detail" }
    },
    "showPostNavigation": {
      "type": "boolean",
      "default": true,
      "label": "Show Post Navigation",
      "visibleWhen": { "mode": "detail" }
    },
    "showTags": {
      "type": "boolean",
      "default": true,
      "label": "Show Tags",
      "visibleWhen": { "mode": "detail" }
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "full-width-on-mobile"
  }
}
