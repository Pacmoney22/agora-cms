{
  "id": "category-list",
  "name": "Category List",
  "category": "Commerce",
  "icon": "list",
  "acceptsChildren": false,
  "properties": {
    "layout": {
      "type": "enum",
      "values": ["grid", "list", "carousel", "masonry"],
      "default": "grid",
      "label": "Layout"
    },
    "columns": {
      "type": "number",
      "default": 4,
      "min": 2,
      "max": 6,
      "label": "Columns"
    },
    "showImage": {
      "type": "boolean",
      "default": true,
      "label": "Show Image"
    },
    "showProductCount": {
      "type": "boolean",
      "default": true,
      "label": "Show Product Count"
    },
    "cardStyle": {
      "type": "enum",
      "values": ["overlay", "below", "minimal"],
      "default": "overlay",
      "label": "Card Style"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "reduce-columns-on-mobile"
  }
}
