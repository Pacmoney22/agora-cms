{
  "id": "product-quick-view",
  "name": "Product Quick View",
  "category": "Commerce",
  "icon": "eye",
  "acceptsChildren": false,
  "properties": {
    "showGallery": {
      "type": "boolean",
      "default": true,
      "label": "Show Gallery"
    },
    "showVariants": {
      "type": "boolean",
      "default": true,
      "label": "Show Variants"
    },
    "showDescription": {
      "type": "boolean",
      "default": true,
      "label": "Show Description"
    },
    "showRating": {
      "type": "boolean",
      "default": true,
      "label": "Show Rating"
    },
    "showViewFullPage": {
      "type": "boolean",
      "default": true,
      "label": "Show View Full Page Link"
    },
    "maxDescriptionLength": {
      "type": "number",
      "default": 200,
      "min": 50,
      "max": 1000,
      "label": "Max Description Length"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "vertical-on-mobile"
  }
}
