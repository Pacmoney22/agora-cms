{
  "id": "blog-grid",
  "name": "Blog Grid",
  "category": "Blog",
  "icon": "layout-grid",
  "acceptsChildren": false,
  "properties": {
    "source": {
      "type": "enum",
      "values": ["recent", "category", "tag", "featured"],
      "default": "recent",
      "label": "Post Source"
    },
    "sortBy": {
      "type": "enum",
      "values": ["newest", "oldest", "title"],
      "default": "newest",
      "label": "Sort By"
    },
    "maxPosts": {
      "type": "number",
      "default": 6,
      "label": "Posts Per Page",
      "min": 1,
      "max": 24
    },
    "columns": {
      "type": "enum",
      "values": [1, 2, 3, 4],
      "default": 3,
      "label": "Columns"
    },
    "layout": {
      "type": "enum",
      "values": ["grid", "list", "masonry"],
      "default": "grid",
      "label": "Layout"
    },
    "showFilters": {
      "type": "boolean",
      "default": false,
      "label": "Show Category Filters"
    },
    "paginationStyle": {
      "type": "enum",
      "values": ["load-more", "numbered", "infinite-scroll"],
      "default": "load-more",
      "label": "Pagination Style"
    },
    "featuredFirst": {
      "type": "boolean",
      "default": false,
      "label": "Featured First Post"
    }
  },
  "responsive": {
    "breakpoints": ["desktop", "tablet", "mobile"],
    "stackBehavior": "reduce-columns-on-mobile"
  }
}
