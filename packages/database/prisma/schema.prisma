// ============================================================
// EVENTS & VENUES
// ============================================================

enum EventStatus {
  draft
  published
  cancelled
  completed
}

enum TicketStatus {
  valid
  used
  cancelled
  refunded
}

model Venue {
  id              String   @id @default(uuid()) @db.Uuid
  name            String   @db.VarChar(255)
  slug            String   @unique @db.VarChar(500)
  address         Json?    @db.JsonB  // { street, city, state, zip, country }
  capacity        Int?
  amenities       String[] @default([])  // ['WiFi', 'Parking', 'ADA Accessible']
  contactInfo     Json?    @map("contact_info") @db.JsonB  // { phone, email, website }
  imageUrl        String?  @map("image_url") @db.Text
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  events          Event[]

  @@index([slug])
  @@map("venues")
}

model Event {
  id              String      @id @default(uuid()) @db.Uuid
  title           String      @db.VarChar(255)
  slug            String      @unique @db.VarChar(500)
  description     String?     @db.Text
  status          EventStatus @default(draft)

  // Event dates
  startDate       DateTime    @map("start_date")
  endDate         DateTime    @map("end_date")
  timezone        String      @default("UTC") @db.VarChar(50)

  // Venue
  venueId         String?     @map("venue_id") @db.Uuid
  virtualEventUrl String?     @map("virtual_event_url") @db.Text  // For online events

  // External registration
  isExternalRegistration Boolean @default(false) @map("is_external_registration")
  externalRegistrationUrl String? @map("external_registration_url") @db.Text

  // Event metadata
  imageUrl        String?     @map("image_url") @db.Text
  bannerUrl       String?     @map("banner_url") @db.Text
  maxAttendees    Int?        @map("max_attendees")
  tags            String[]    @default([])
  seo             Json?       @db.JsonB

  publishedAt     DateTime?   @map("published_at")
  createdAt       DateTime    @default(now()) @map("created_at")
  updatedAt       DateTime    @updatedAt @map("updated_at")

  venue           Venue?      @relation(fields: [venueId], references: [id])
  sessions        EventSession[]
  sponsors        Sponsor[]
  ticketTypes     TicketType[]
  tickets         Ticket[]
  attendees       Attendee[]

  // Scoped role assignments
  eventStaffAssignments EventStaffAssignment[]
  exhibitorAssignments  ExhibitorAssignment[]
  kioskAssignments      KioskAssignment[]

  @@index([status, startDate])
  @@index([slug])
  @@map("events")
}

model EventSession {
  id              String   @id @default(uuid()) @db.Uuid
  eventId         String   @map("event_id") @db.Uuid
  title           String   @db.VarChar(255)
  description     String?  @db.Text
  sessionType     String   @map("session_type") @db.VarChar(50)  // keynote, workshop, panel, networking

  startTime       DateTime @map("start_time")
  endTime         DateTime @map("end_time")

  room            String?  @db.VarChar(100)
  capacity        Int?
  requiresTicket  Boolean  @default(false) @map("requires_ticket")

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  speakers        SessionSpeaker[]

  @@index([eventId, startTime])
  @@map("event_sessions")
}

model Speaker {
  id              String   @id @default(uuid()) @db.Uuid
  name            String   @db.VarChar(255)
  slug            String   @unique @db.VarChar(500)
  title           String?  @db.VarChar(255)  // Job title
  company         String?  @db.VarChar(255)
  bio             String?  @db.Text
  photoUrl        String?  @map("photo_url") @db.Text
  socialLinks     Json?    @map("social_links") @db.JsonB  // { twitter, linkedin, website }
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  sessions        SessionSpeaker[]

  @@index([slug])
  @@map("speakers")
}

model SessionSpeaker {
  sessionId       String   @map("session_id") @db.Uuid
  speakerId       String   @map("speaker_id") @db.Uuid
  role            String   @default("speaker") @db.VarChar(50)  // speaker, moderator, panelist

  session         EventSession @relation(fields: [sessionId], references: [id], onDelete: Cascade)
  speaker         Speaker  @relation(fields: [speakerId], references: [id], onDelete: Cascade)

  @@id([sessionId, speakerId])
  @@map("session_speakers")
}

model Sponsor {
  id              String   @id @default(uuid()) @db.Uuid
  eventId         String   @map("event_id") @db.Uuid
  name            String   @db.VarChar(255)
  tier            String   @db.VarChar(50)  // platinum, gold, silver, bronze
  logoUrl         String   @map("logo_url") @db.Text
  websiteUrl      String?  @map("website_url") @db.Text
  description     String?  @db.Text
  position        Int      @default(0)
  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)

  @@index([eventId, tier])
  @@map("sponsors")
}

model TicketType {
  id              String   @id @default(uuid()) @db.Uuid
  eventId         String   @map("event_id") @db.Uuid
  name            String   @db.VarChar(255)  // General Admission, VIP, Early Bird
  description     String?  @db.Text
  price           Int      // cents
  currency        String   @default("USD") @db.VarChar(3)
  quantity        Int?     // null = unlimited
  quantitySold    Int      @default(0) @map("quantity_sold")

  salesStart      DateTime? @map("sales_start")
  salesEnd        DateTime? @map("sales_end")

  isActive        Boolean  @default(true) @map("is_active")
  position        Int      @default(0)

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  tickets         Ticket[]

  @@index([eventId, isActive])
  @@map("ticket_types")
}

model Ticket {
  id              String       @id @default(uuid()) @db.Uuid
  eventId         String       @map("event_id") @db.Uuid
  ticketTypeId    String       @map("ticket_type_id") @db.Uuid
  attendeeId      String?      @map("attendee_id") @db.Uuid
  orderId         String?      @map("order_id") @db.Uuid

  ticketNumber    String       @unique @map("ticket_number") @db.VarChar(50)
  qrCode          String       @unique @map("qr_code") @db.VarChar(255)  // QR code data
  status          TicketStatus @default(valid)

  // Apple Wallet
  passUrl         String?      @map("pass_url") @db.Text  // S3 URL to .pkpass file
  passSerial      String?      @unique @map("pass_serial") @db.VarChar(100)

  checkedInAt     DateTime?    @map("checked_in_at")
  checkedInBy     String?      @map("checked_in_by") @db.Uuid  // User who scanned (kiosk/staff)

  createdAt       DateTime     @default(now()) @map("created_at")
  updatedAt       DateTime     @updatedAt @map("updated_at")

  event           Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  ticketType      TicketType   @relation(fields: [ticketTypeId], references: [id])
  attendee        Attendee?    @relation(fields: [attendeeId], references: [id])
  order           Order?       @relation(fields: [orderId], references: [id])

  @@index([eventId, status])
  @@index([ticketNumber])
  @@index([qrCode])
  @@index([passSerial])
  @@map("tickets")
}

model Attendee {
  id              String   @id @default(uuid()) @db.Uuid
  eventId         String   @map("event_id") @db.Uuid
  userId          String?  @map("user_id") @db.Uuid  // Linked user account (optional)

  firstName       String   @map("first_name") @db.VarChar(100)
  lastName        String   @map("last_name") @db.VarChar(100)
  email           String   @db.VarChar(255)
  phone           String?  @db.VarChar(50)
  company         String?  @db.VarChar(255)
  jobTitle        String?  @map("job_title") @db.VarChar(255)

  customData      Json?    @map("custom_data") @db.JsonB  // Additional form fields

  createdAt       DateTime @default(now()) @map("created_at")
  updatedAt       DateTime @updatedAt @map("updated_at")

  event           Event    @relation(fields: [eventId], references: [id], onDelete: Cascade)
  user            User?    @relation(fields: [userId], references: [id])
  tickets         Ticket[]

  @@unique([eventId, email])
  @@index([eventId])
  @@index([userId])
  @@map("attendees")
}
